	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<member>
		<!--============-->
		<!--  卫星传感器 -->
		<!--============-->
		<System gml:id="RemoteSensorScanner">
			<gml:description>卫星传感器概述</gml:description>
			<gml:name>卫星扫描成像传感器</gml:name>
			<!--======================-->
			<!--  传感器标签==>关键词  -->
			<!--======================-->
			<!-- YXL 已转换 -->
			<keywords>
				<KeywordList>
					<keyword>遥感</keyword>
					<keyword>传感器英文简称</keyword>
					<keyword>卫星英文简称</keyword>
					<keyword>传感器中文全称</keyword>
					<keyword>典型应用1</keyword>
					<keyword>典型应用2</keyword>
				</KeywordList>
			</keywords>
			<!--======================-->
			<!--  传感器标签==>标示符  -->
			<!--======================-->
			<!-- YXL 已转换 -->
			<identification>
				<IdentifierList>
					<!-- YXL 已转换 -->
					<identifier name="标识码">
						<Term definition="urn:ogc:def:identifier:OGC:1.0:uniqueID">
							<value>urn:ogc:feature:remotesensor:传感器英文简称大写(不能有空格等)</value>
						</Term>
					</identifier>
					<!-- YXL 已转换 -->
					<identifier name="全称">
						<Term definition="urn:ogc:def:identifier:OGC:1.0:longName">
							<value>null</value>
						</Term>
					</identifier>
					<!-- YXL 已转换 -->
					<identifier name="简称">
						<Term definition="urn:ogc:def:identifier:OGC:1.0:shortName">
							<value>null</value>
						</Term>
					</identifier>
					<!-- YXL 已转换 -->
					<identifier name="所属平台名称">
						<Term definition="urn:ogc:def:identifier:OGC:1.0:parentSystemStandardName">
							<value>平台简称</value>
						</Term>
					</identifier>
					<!-- YXL 已转换 -->
					<identifier name="所属平台标识码">
						<Term definition="urn:ogc:def:identifier:OGC:1.0:parentSystemUniqueId">
							<value>urn:ogc:feature:remotesensor:platform:XX</value>
						</Term>
					</identifier>
				</IdentifierList>
			</identification>
			<!--======================-->
			<!--  传感器标签==>分类器  -->
			<!--======================-->
			<!-- YXL 已转换 -->
			<classification>
				<ClassifierList>
					<!-- YXL 已转换 这有有点问题  sensortype转换为 systemtype了-->
					<classifier name="传感器类型">
						<Term definition="urn:ogc:def:classifier:OGC:1.0:sensorType">
							<value>多光谱成像仪/高光谱成像仪/微波辐射计（选一）</value>
						</Term>
					</classifier>
					<!-- YXL 已转换 -->
					<classifier name="扫描类型">
						<Term definition="urn:ogc:def:classifier:OGC:1.0:scannerType">
							<value>推扫式/摆扫式（选一）</value>
						</Term>
					</classifier>
					<!-- YXL 已转换 -->
					<classifier name="预期应用">
						<Term definition="urn:ogc:def:classifier:OGC:1.0:intendedApplication">
							<value>对地观测成像</value>
						</Term>
					</classifier>
					<!-- YXL 已转换 -->
					<classifier name="预期应用">
						<Term definition="urn:ogc:def:classifier:OGC:1.0:newAdded">
							<value>flood</value>
						</Term>
					</classifier>
					<!-- YXL 已转换 -->
					<classifier name="预期应用">
						<Term definition="urn:ogc:def:classifier:OGC:1.0:newAdded">
							<value>应用1（此结构可重复）</value>
						</Term>
					</classifier>
				</ClassifierList>
			</classification>
			<!--=============================-->
			<!--  传感器互操作服务==>有效时间  -->
			<!--=============================-->
			<!-- YXL 已转换 -->
			<validTime>
				<gml:TimePeriod gml:id="传感器有效时间">
					<gml:beginPosition>2011-01-01T00:00:00.0Z</gml:beginPosition>
					<gml:endPosition>2011-01-01T00:00:00.0Z</gml:endPosition>
				</gml:TimePeriod>
			</validTime>
			<!--===========================-->
			<!--  传感器物理特征==>物理特征  -->
			<!--===========================-->
			<!-- YXL 已转换 -->
			<characteristics>
				<swe:DataRecord definition="urn:ogc:def:property:Liesmars:physicalProperties">
					<swe:field name="长度">
						<swe:Quantity definition="urn:ogc:def:property:length">
							<swe:uom code="m" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<swe:field name="宽度">
						<swe:Quantity definition="urn:ogc:def:property:width">
							<swe:uom code="m" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<swe:field name="高度">
						<swe:Quantity definition="urn:ogc:def:property:height">
							<swe:uom code="m" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<swe:field name="质量">
						<swe:Quantity definition="urn:ogc:def:property:weight">
							<swe:uom code="kg" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<swe:field name="电流">
						<swe:Quantity definition="urn:ogc:def:property:current">
							<swe:uom code="A" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<swe:field name="电压">
						<swe:Quantity definition="urn:ogc:def:property:voltage">
							<swe:uom code="V" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<swe:field name="功率">
						<swe:Quantity definition="urn:ogc:def:property:power">
							<swe:uom code="W" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<swe:field name="设计寿命">
						<swe:Quantity definition="urn:ogc:def:property:designedLife">
							<swe:uom code="year" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
				</swe:DataRecord>
			</characteristics>
			<!--===========================-->
			<!--  传感器观测能力==>观测广度  -->
			<!--  传感器观测能力==>观测深度  -->
			<!--  传感器观测能力==>观测频度  -->
			<!--  传感器观测能力==>观测质量  -->
			<!--  传感器观测能力==>观测数据  -->
			<!--===========================-->

			<capabilities>
				<swe:DataRecord
					definition="urn:ogc:def:property:Liesmars:measurementCapabilities">
					<!--  传感器观测能力==>观测广度  -->
					<!-- YXL 已转换 -->
					<swe:field name="observedBBOX">
						<swe:Envelope definition="urn:ogc:def:property:OGC:1.0:observedBBOX"
							referenceFrame="urn:ogc:def:crs:EPSG:4326">
							<swe:lowerCorner>
								<swe:Vector>
									<swe:coordinate name="纬度">
										<swe:Quantity axisID="y">
											<swe:uom code="deg" xlink:href="urn:ogc:def:uom:UCUM::deg" />
											<swe:value>-90</swe:value>
										</swe:Quantity>
									</swe:coordinate>
									<swe:coordinate name="经度">
										<swe:Quantity axisID="x">
											<swe:uom code="deg" xlink:href="urn:ogc:def:uom:UCUM::deg" />
											<swe:value>-180</swe:value>
										</swe:Quantity>
									</swe:coordinate>
								</swe:Vector>
							</swe:lowerCorner>
							<swe:upperCorner>
								<swe:Vector>
									<swe:coordinate name="纬度">
										<swe:Quantity axisID="y">
											<swe:uom code="deg" xlink:href="urn:ogc:def:uom:UCUM::deg" />
											<swe:value>90</swe:value>
										</swe:Quantity>
									</swe:coordinate>
									<swe:coordinate name="经度">
										<swe:Quantity axisID="x">
											<swe:uom code="deg" xlink:href="urn:ogc:def:uom:UCUM::deg" />
											<swe:value>180</swe:value>
										</swe:Quantity>
									</swe:coordinate>
								</swe:Vector>
							</swe:upperCorner>
						</swe:Envelope>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="波段类别">
						<swe:Category definition="urn:ogc:def:property:bandsCategory">
							<swe:value>VIS/NIR/SWIR/MWIR/TIR/FIR/
								MW/K-Band/X-Band/C-Band/S-Band/L-Band /P-Band（可多选，中文分号分隔）
							</swe:value>
						</swe:Category>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="波段数">
						<swe:Count definition="urn:ogc:def:property:bandsNumber">
							<swe:value>00</swe:value>
						</swe:Count>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="波谱范围">
						<swe:QuantityRange definition="urn:ogc:def:property:bandswidthRange">
							<swe:uom code="um" />
							<swe:value>00 00</swe:value>
						</swe:QuantityRange>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="成像幅宽范围">
						<swe:QuantityRange definition="urn:ogc:def:property:swathRange">
							<swe:uom code="km" />
							<swe:value>00 00</swe:value>
						</swe:QuantityRange>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="视场角">
						<swe:Quantity definition="urn:ogc:def:property:fov">
							<swe:uom code="deg" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="侧视角">
						<swe:Quantity definition="urn:ogc:def:property:sideSwingAngle">
							<swe:uom code="deg" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<!--  传感器观测能力==>观测广度  -->
					<!--  传感器观测能力==>观测深度  -->
					<!--  传感器观测能力==>观测质量  -->
					<!-- YXL 已转换 -->
					<swe:field name="波谱分布特征">
						<!-- SpectrumDistributionFeature -->
						<!-- 这个的转换的原则是将波谱分布特征中的每一个 组合起来，作为一个结果用|连接起来 -->
						<swe:DataRecord
							definition="urn:ogc:def:property:Liesmars:measurementCapabilities">
							<swe:field name="Red（示例）波段名称">
								<swe:DataRecord>
									<swe:field name="波段类型">
										<swe:Category definition="urn:ogc:def:property:bandCategory">
											<swe:value>VIS-RGB/NIR/SWIR/MWIR/TIR/FIR/
												MW/K-Band/X-Band/C-Band/S-Band/L-Band /P-Band</swe:value>
										</swe:Category>
									</swe:field>
									<swe:field name="波段宽度">
										<swe:QuantityRange definition="urn:ogc:def:property:bandWidth">
											<swe:uom code="um" />
											<swe:value>00 00</swe:value>
										</swe:QuantityRange>
									</swe:field>
									<swe:field name="空间分辨率">
										<swe:Quantity definition="urn:ogc:def:property:spatialResolution">
											<swe:uom code="m" />
											<swe:value>00</swe:value>
										</swe:Quantity>
									</swe:field>
									<swe:field name="辐射精度">
										<swe:Text definition="urn:ogc:def:property:radiometricAccuracy">
											<swe:value>null</swe:value>
										</swe:Text>
									</swe:field>
									<swe:field name="波段应用">
										<swe:Text definition="urn:ogc:def:property:bandApplication">
											<swe:value>null</swe:value>
										</swe:Text>
									</swe:field>
								</swe:DataRecord>
							</swe:field>
							<swe:field name="Green（示例）波段名称">
								<swe:DataRecord>
									<swe:field name="波段类型">
										<swe:Category definition="urn:ogc:def:property:bandCategory">
											<swe:value>VIS-RGB/NIR/SWIR/MWIR/TIR/FIR/
												MW/K-Band/X-Band/C-Band/S-Band/L-Band /P-Band</swe:value>
										</swe:Category>
									</swe:field>
									<swe:field name="波段宽度">
										<swe:QuantityRange definition="urn:ogc:def:property:bandWidth">
											<swe:uom code="um" />
											<swe:value>00 00</swe:value>
										</swe:QuantityRange>
									</swe:field>
									<swe:field name="空间分辨率">
										<swe:Quantity definition="urn:ogc:def:property:spatialResolution">
											<swe:uom code="m" />
											<swe:value>00</swe:value>
										</swe:Quantity>
									</swe:field>
									<swe:field name="辐射精度">
										<swe:Text definition="urn:ogc:def:property:radiometricAccuracy">
											<swe:value>null</swe:value>
										</swe:Text>
									</swe:field>
									<swe:field name="波段应用">
										<swe:Text definition="urn:ogc:def:property:bandApplication">
											<swe:value>null</swe:value>
										</swe:Text>
									</swe:field>
								</swe:DataRecord>
							</swe:field>
						</swe:DataRecord>
					</swe:field>
					<!--  传感器观测能力==>观测深度  -->
					<!-- YXL 已转换 -->
					<swe:field name="地面分辨率范围">
						<swe:QuantityRange definition="urn:ogc:def:property:spatialResolutionRange">
							<swe:uom code="m" />
							<swe:value>00 00</swe:value>
						</swe:QuantityRange>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="星下点分辨率">
						<swe:Quantity definition="urn:ogc:def:property:nadirSpatialResolution">
							<swe:uom code="m" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="瞬时视场角">
						<swe:Quantity definition="urn:ogc:def:property:IFOV">
							<swe:uom code="mrad" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="量化等级">
						<swe:Quantity definition="urn:ogc:def:property:quantizationLevel">
							<swe:uom code="bit" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="光谱分辨率">
						<swe:Quantity definition="urn:ogc:def:property:spectralResolution">
							<swe:uom code="nm" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="探测精度">
						<swe:QuantityRange definition="urn:ogc:def:property:precisionRange">
							<swe:uom code="%" />
							<swe:value>5 5</swe:value>
						</swe:QuantityRange>
					</swe:field>
					<!-- YXL 已转换 -->
					<!--  传感器观测能力==>观测频度  -->
					<swe:field name="时间分辨率范围">
						<swe:QuantityRange definition="urn:ogc:def:property:temporalResolutionRange">
							<swe:uom code="d" />
							<swe:value>00 00</swe:value>
						</swe:QuantityRange>
					</swe:field>
					<!-- YXL 已转换 -->
					<!--  传感器观测能力==>观测质量  -->
					<swe:field name="定位精度">
						<swe:Quantity definition="urn:ogc:def:property:positioningAccuracy">
							<swe:uom code="m" />
							<swe:value>00</swe:value>
						</swe:Quantity>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="辐射精度">
						<swe:Text definition="urn:ogc:def:property:radiometricAccuracy">
							<swe:value>null</swe:value>
						</swe:Text>
					</swe:field>
					<!-- YXL 已转换 -->
					<!--  传感器观测能力==>观测数据  -->
					<swe:field name="数据格式">
						<swe:Category definition="urn:ogc:def:property:dataFormat">
							<swe:value>null</swe:value>
						</swe:Category>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="数据质量等级">
						<swe:Category definition="urn:ogc:def:property:dataQualityLevel">
							<swe:value>null</swe:value>
						</swe:Category>
					</swe:field>
					<!-- YXL 已转换 -->
					<swe:field name="数据获取等级">
						<swe:Category definition="urn:ogc:def:property:dataAccessLevel">
							<swe:value>null</swe:value>
						</swe:Category>
					</swe:field>
				</swe:DataRecord>
			</capabilities>
			<!--=============================-->
			<!--  传感器互操作服务==>联系单位  -->
			<!--=============================-->
			<!-- YXL 已转换 -->
			<contact xlink:arcrole="urn:ogc:def:role:operator">
				<ResponsibleParty>
					<individualName>null</individualName>
					<organizationName>null（中文名称加括号英文简称）</organizationName>
					<contactInfo>
						<phone>
							<voice>null</voice>
							<facsimile>null</facsimile>
						</phone>
						<address>
							<deliveryPoint>null</deliveryPoint>
							<city>null</city>
							<administrativeArea>null</administrativeArea>
							<postalCode>null</postalCode>
							<country>null</country>
							<electronicMailAddress>null</electronicMailAddress>
						</address>
					</contactInfo>
				</ResponsibleParty>
			</contact>
			<!--=============================-->
			<!--  传感器互操作服务==>服务接口  -->
			<!--=============================-->
			<!-- YXL 已转换 -->
			<interfaces>
				<InterfaceList>
					<interface name="MODIS_SOS(示例)">
						<InterfaceDefinition>
							<serviceLayer>
								<swe:DataRecord
									definition="urn:ogc:def:interface:OGC:1.0:SWEServiceInterface">
									<swe:field name="urn:ogc:def:interface:OGC:1.0:ServiceURL">
										<swe:Text>
											<swe:value>http://swe.whu.edu.cn:9000/SOS/MODIS_SOS
											</swe:value>
										</swe:Text>
									</swe:field>
									<swe:field name="urn:ogc:def:interface:OGC:1.0:ServiceType">
										<swe:Text>
											<swe:value>SOS</swe:value>
										</swe:Text>
									</swe:field>
									<swe:field
										name="urn:ogc:def:interface:OGC:1.0:ServiceSpecificSensorID">
										<swe:Text>
											<swe:value>urn:ogc:feature:remotesensor:MODIS</swe:value>
										</swe:Text>
									</swe:field>
								</swe:DataRecord>
							</serviceLayer>
						</InterfaceDefinition>
					</interface>
				</InterfaceList>
			</interfaces>
			<!--============-->
			<!--  输入输出  -->
			<!--============-->
			<!-- YXL 已转换 -->
			<inputs>
				<InputList>
					<input name="辐射">
						<swe:ObservableProperty definition="urn:ogc:def:property:OGC:1.0:radiation" />
					</input>
				</InputList>
			</inputs>
			<!-- YXL 已转换 -->
			<outputs>
				<OutputList>
					<output name="影像">
						<swe:Quantity definition="urn:ogc:def:property:OGC:1.0:image">
							<swe:uom code="pix" />
						</swe:Quantity>
					</output>
				</OutputList>
			</outputs>
		</System>
	</member>
</SensorML>