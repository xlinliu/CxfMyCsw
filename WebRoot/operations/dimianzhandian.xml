<SensorML version="1.0.1" xsi:schemaLocation="http://www.opengis.net/sensorML/1.0.1 http://schemas.opengis.net/sensorML/1.0.1/sensorML.xsd" xmlns="http://www.opengis.net/sensorML/1.0.1" xmlns:gml="http://www.opengis.net/gml" xmlns:swe="http://www.opengis.net/swe/1.0.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <member>
    <!--================-->
    <!--  地面传感器平台 -->
    <!--================-->
    <System gml:id="InsituSensorPlatformHydrology">
      <gml:description>站点概述</gml:description>
      <gml:name>地面传感器平台</gml:name>
	  <!--====================-->
      <!--  平台标签==>关键词  -->
	  <!--====================-->
      <keywords>
        <KeywordList>
          <keyword>原位</keyword>
          <keyword>水文/气象</keyword>
          <keyword>传感器1</keyword>
          <keyword>传感器2</keyword>
          <keyword>典型应用1</keyword>
          <keyword>典型应用2</keyword>
        </KeywordList>
      </keywords>
	  <!--====================-->
      <!--  平台标签==>标示符  -->
	  <!--====================-->
      <identification>
        <IdentifierList>
          <identifier name="标识码">
            <Term definition="urn:ogc:def:identifier:OGC:1.0:uniqueID">
              <value>urn:ogc:feature:insitusensor:platform:站点英文简称大写(不能有空格等)</value>
            </Term>
          </identifier>
          <identifier name="全称">
            <Term definition="urn:ogc:def:identifier:OGC:1.0:longName">
              <value>站点中文全称</value>
            </Term>
          </identifier>
          <identifier name="简称">
            <Term definition="urn:ogc:def:identifier:OGC:1.0:shortName">
              <value>中文简称</value>
            </Term>
          </identifier>
          <identifier name="搭载传感器名称">
            <Term definition="urn:ogc:def:identifier:OGC:1.0:associatedSensorName">
              <value>传感器简称1（此结构可多个）</value>
            </Term>
          </identifier>
          <identifier name="搭载传感器标识码">
            <Term definition="urn:ogc:def:identifier:OGC:1.0:associatedSensorUniqueID">
              <value>urn:ogc:feature:insitesensor:XX1（此结构可多个）</value>
            </Term>
          </identifier>
        </IdentifierList>
      </identification>
	  <!--====================-->
      <!--  平台标签==>分类器  -->
	  <!--====================-->
      <classification>
        <ClassifierList>
          <classifier name="平台类型">
            <Term definition="urn:ogc:def:classifier:OGC:1.0:platformType">
              <value>地面站点</value>
            </Term>
          </classifier>
          <classifier name="传感器类型">
            <Term definition="urn:ogc:def:classifier:OGC:1.0:sensorType">
              <value>水文监测站点/气象监测站点/水质监测站点/大气监测站点/其他（大致选一类）</value>
            </Term>
          </classifier>
          <classifier name="站点等级">
            <Term definition="urn:ogc:def:classifier:OGC:1.0:stationLevel">
              <value>国家一级/国家二级/...</value>
            </Term>
          </classifier>
          <classifier name="预期应用">
            <Term definition="urn:ogc:def:classifier:OGC:1.0:intendedApplication">
              <value>水文/水质/气象/大气观测</value>
            </Term>
          </classifier>
          <classifier name="预期应用">
            <Term definition="urn:ogc:def:classifier:OGC:1.0:newAdded">
              <value>flood【必填】</value>
            </Term>
          </classifier>
          <classifier name="预期应用">
            <Term definition="urn:ogc:def:classifier:OGC:1.0:newAdded">
              <value>应用1（此结构可多个）</value>
            </Term>
          </classifier>
        </ClassifierList>
      </classification>
	  <!--===========================-->
      <!--  平台互操作服务==>有效时间  -->
	  <!--===========================-->
      <validTime>
        <gml:TimePeriod gml:id="卫星平台有效时间">
          <gml:beginPosition>2011-01-01T00:00:00.0Z</gml:beginPosition>
          <gml:endPosition>2011-01-01T00:00:00.0Z</gml:endPosition>
        </gml:TimePeriod>
      </validTime>
	  <!--======================-->
      <!--  平台特征==>物理特征  -->
	  <!--======================-->
     <characteristics>
        <swe:DataRecord definition="urn:ogc:def:property:Liesmars:physicalProperties">
          <swe:field name="长度">
            <swe:Quantity definition="urn:ogc:def:property:length">
              <swe:uom code="m" />
              <swe:value>00</swe:value>
            </swe:Quantity>
          </swe:field>
          <swe:field name="宽度">
            <swe:Quantity definition="urn:ogc:def:property:width">
              <swe:uom code="m" />
              <swe:value>00</swe:value>
            </swe:Quantity>
          </swe:field>
          <swe:field name="高度">
            <swe:Quantity definition="urn:ogc:def:property:height">
              <swe:uom code="m" />
              <swe:value>00</swe:value>
            </swe:Quantity>
          </swe:field>
          <swe:field name="质量">
            <swe:Quantity definition="urn:ogc:def:property:weight">
              <swe:uom code="kg" />
              <swe:value>00</swe:value>
            </swe:Quantity>
          </swe:field>
          <swe:field name="电源类型">
            <swe:Category definition="urn:ogc:def:property:powerType">
              <swe:value>直流电源/交流电源</swe:value>
            </swe:Category>
          </swe:field>
          <swe:field name="电流">
            <swe:Quantity definition="urn:ogc:def:property:current">
              <swe:uom code="A" />
              <swe:value>00</swe:value>
            </swe:Quantity>
          </swe:field> 
          <swe:field name="电压">
            <swe:Quantity definition="urn:ogc:def:property:voltage">
              <swe:uom code="V" />
              <swe:value>00</swe:value>
            </swe:Quantity>
          </swe:field> 
          <swe:field name="功率">
            <swe:Quantity definition="urn:ogc:def:property:power">
              <swe:uom code="W" />
              <swe:value>00</swe:value>
            </swe:Quantity>
          </swe:field>
          <swe:field name="输出功率">
            <swe:Quantity definition="urn:ogc:def:property:outputPower">
              <swe:uom code="w" />
              <swe:value>00</swe:value>
            </swe:Quantity>
          </swe:field>
          <swe:field name="设计寿命">
            <swe:Quantity definition="urn:ogc:def:property:designedLife">
              <swe:uom code="year" />
              <swe:value>00</swe:value>
            </swe:Quantity>
          </swe:field>
          <swe:field name="工作温度范围">
            <swe:QuantityRange definition="urn:ogc:def:property:operatingTemperature">
              <swe:uom code="cel" />
              <swe:value>00 00</swe:value>
            </swe:QuantityRange>
          </swe:field>
          <swe:field name="工作湿度范围">
            <swe:QuantityRange definition="urn:ogc:def:property:operatingHumidity">
              <swe:uom code="%" />
              <swe:value>00 00</swe:value>
            </swe:QuantityRange>
          </swe:field>
          <swe:field name="防护等级">
            <swe:Text definition="urn:ogc:def:property:protectionGrade">
              <swe:value>null</swe:value>
            </swe:Text>
          </swe:field>
          <swe:field name="无故障时间">
            <swe:Quantity definition="urn:ogc:def:property:MTBF">
              <swe:uom code="h" />
              <swe:value>00</swe:value>
            </swe:Quantity>
          </swe:field>
        </swe:DataRecord>
      </characteristics>
	  <!--======================-->
      <!--  平台能力==>定位能力  -->
	  <!--======================-->
      <capabilities>
        <swe:DataRecord definition="urn:ogc:def:property:Liesmars:GeoPositionCapability">
          <swe:field name="observedBBOX">
            <swe:Envelope definition="urn:ogc:def:property:OGC:1.0:observedBBOX" referenceFrame="urn:ogc:def:crs:EPSG:4326">
              <swe:lowerCorner>
                <swe:Vector>
                  <swe:coordinate name="纬度">
                    <swe:Quantity axisID="y">
                      <swe:uom code="deg" xlink:href="urn:ogc:def:uom:UCUM::deg" />
                      <swe:value>-90</swe:value>
                    </swe:Quantity>
                  </swe:coordinate>
                  <swe:coordinate name="经度">
                    <swe:Quantity axisID="x">
                      <swe:uom code="deg" xlink:href="urn:ogc:def:uom:UCUM::deg" />
                      <swe:value>-180</swe:value>
                    </swe:Quantity>
                  </swe:coordinate>
                </swe:Vector>
              </swe:lowerCorner>
              <swe:upperCorner>
                <swe:Vector>
                  <swe:coordinate name="纬度">
                    <swe:Quantity axisID="y">
                      <swe:uom code="deg" xlink:href="urn:ogc:def:uom:UCUM::deg" />
                      <swe:value>90</swe:value>
                    </swe:Quantity>
                  </swe:coordinate>
                  <swe:coordinate name="经度">
                    <swe:Quantity axisID="x">
                      <swe:uom code="deg" xlink:href="urn:ogc:def:uom:UCUM::deg" />
                      <swe:value>180</swe:value>
                    </swe:Quantity>
                  </swe:coordinate>
                </swe:Vector>
              </swe:upperCorner>
            </swe:Envelope>
          </swe:field>
        </swe:DataRecord>
      </capabilities>
	  <!--======================-->
      <!--  平台能力==>计算能力  -->
	  <!--======================-->
      <capabilities>
        <swe:DataRecord definition="urn:ogc:def:property:Liesmars:computingCapability">
          <swe:field name="存储容量">
            <swe:Quantity definition="urn:ogc:def:property:storage">
              <swe:uom code="GB" />
              <swe:value>00</swe:value>
            </swe:Quantity>
          </swe:field>
          <swe:field name="数据速率">
            <swe:Quantity definition="urn:ogc:def:property:dataRate">
              <swe:uom code="Mbps" />
              <swe:value>00</swe:value>
            </swe:Quantity>
          </swe:field>
        </swe:DataRecord>
      </capabilities>
	  <!--======================-->
      <!--  平台能力==>通信能力  -->
	  <!--======================-->
      <capabilities>
        <swe:DataRecord definition="urn:ogc:def:property:Liesmars:communicationCapability">
          <swe:field name="数传模式">
            <swe:Category definition="urn:ogc:def:property:dataTransmissionMode">
              <swe:value>中继星下传/直接下传/实时传输/存储传输（选一）</swe:value>
            </swe:Category>
          </swe:field>
          <swe:field name="通信接口">
            <swe:Category definition="urn:ogc:def:property:communicationInterface">
              <swe:value>RS232/USB（示例）</swe:value>
            </swe:Category>
          </swe:field>
          <swe:field name="通信方式">
            <swe:Text definition="urn:ogc:def:property:communicationMethod">
              <swe:value>null</swe:value>
            </swe:Text>
          </swe:field>
        </swe:DataRecord>
      </capabilities>
	  <!--============================-->
      <!--  平台互操作服务==>联系单位  -->
	  <!--============================-->
      <contact xlink:arcrole="urn:ogc:def:role:operator">
        <ResponsibleParty>
          <individualName>null</individualName>
          <organizationName>null（中文名称加括号英文简称）</organizationName>
          <contactInfo>
            <phone>
              <voice>null</voice>
              <facsimile>null</facsimile>
            </phone>
            <address>
              <deliveryPoint>null</deliveryPoint>
              <city>null</city>
              <administrativeArea>null</administrativeArea>
              <postalCode>null</postalCode>
              <country>null</country>
              <electronicMailAddress>null</electronicMailAddress>
            </address>
          </contactInfo>
        </ResponsibleParty>
      </contact>
	  <!--======================-->
      <!--  平台能力==>定位能力  -->
	  <!--======================-->
      <position name="站点位置">
        <swe:Position fixed="false" referenceFrame="urn:ogc:def:crs:EPSG:4329">
          <swe:location>
            <swe:Vector definition="urn:ogc:def:property:OGC:location">
              <swe:coordinate name="纬度">
                <swe:Quantity axisID="y" definition="urn:ogc:def:property:OGC:latitude">
                  <swe:uom code="deg" />
                  <swe:value>00</swe:value>
                </swe:Quantity>
              </swe:coordinate>
              <swe:coordinate name="经度">
                <swe:Quantity axisID="x" definition="urn:ogc:def:property:OGC:longitude">
                  <swe:uom code="deg" />
                  <swe:value>00</swe:value>
                </swe:Quantity>
              </swe:coordinate>
              <swe:coordinate name="高度">
                <swe:Quantity axisID="z" definition="urn:ogc:def:property:OGC:altitude">
                  <swe:uom code="m" />
                  <swe:value>00</swe:value>
                </swe:Quantity>
              </swe:coordinate>
            </swe:Vector>
          </swe:location>
        </swe:Position>
      </position>
	  <!--===========================-->
      <!--  平台互操作服务==>服务接口  -->
	  <!--===========================-->
      <interfaces>
        <InterfaceList>
          <interface name="MODIS_SOS(示例)">
            <InterfaceDefinition>
              <serviceLayer>
                <swe:DataRecord definition="urn:ogc:def:interface:OGC:1.0:SWEServiceInterface">
                  <swe:field name="urn:ogc:def:interface:OGC:1.0:ServiceURL">
                    <swe:Text>
                      <swe:value>http://swe.whu.edu.cn:9000/SOS/MODIS_SOS</swe:value>
                    </swe:Text>
                  </swe:field>
                  <swe:field name="urn:ogc:def:interface:OGC:1.0:ServiceType">
                    <swe:Text>
                      <swe:value>SOS</swe:value>
                    </swe:Text>
                  </swe:field>
                  <swe:field name="urn:ogc:def:interface:OGC:1.0:ServiceSpecificSensorID">
                    <swe:Text>
                      <swe:value>urn:ogc:feature:remotesensor:MODIS(传感器UID)</swe:value>
                    </swe:Text>
                  </swe:field>
                </swe:DataRecord>
              </serviceLayer>
            </InterfaceDefinition>
          </interface>
        </InterfaceList>
      </interfaces>
	  <!--============-->
      <!--  输入输出  -->
	  <!--============-->
      <inputs>
        <InputList>
          <input name="大气温度(示例)">
            <swe:ObservableProperty definition="urn:ogc:def:property:OGC:1.0:AirTemperature" />
          </input>
        </InputList>
      </inputs>
      <outputs>
        <OutputList>
          <output name="温度(示例)">
            <swe:Quantity definition="urn:ogc:def:property:OGC:1.0:Temperature">
              <swe:uom code="cel" />
            </swe:Quantity>
          </output>
        </OutputList>
      </outputs>
	  <!--============-->
      <!--  组成部件  -->
	  <!--============-->
      <components>
        <ComponentList>
          <component name="温度计" xlink:href="urn:ogc:feature:insitusensor:TemperatrueXXX" />
        </ComponentList>
      </components>
      <!--     关联    -->
    </System>
  </member>
</SensorML>